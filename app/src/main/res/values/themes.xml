<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JourneyCraft" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

    </style>

    <style name="Theme.JourneyCraft" parent="Base.Theme.JourneyCraft" />

    <style name="Theme.Weather" parent="Base.Theme.JourneyCraft" >
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MyToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="DialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="colorAccent">@color/black</item>

    </style>
</resources>