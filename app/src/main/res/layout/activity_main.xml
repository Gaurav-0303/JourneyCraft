    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/individualdest"
                android:layout_width="280dp"
                android:layout_height="38dp"
                android:textSize="25sp"
                android:gravity="right"
                android:fontFamily="@font/monstree_font"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/statedest"
                android:layout_width="280dp"
                android:layout_height="22dp"
                android:layout_below="@id/individualdest"
                android:fontFamily="@font/monstree_font"
                android:gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee_regular"
            android:text="Enhance Your Experience"
            android:textSize="28sp"
            android:padding="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="14dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp">

            <RelativeLayout
                android:id="@+id/card_detailed_plan"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/round_bk5">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/categories_shop_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="11dp"
                    android:fontFamily="@font/baloo2"
                    android:text="Detailed\nPlan"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

